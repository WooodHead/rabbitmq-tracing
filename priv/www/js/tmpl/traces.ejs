<h1>Traces</h1>
<div class="section">
  <h2>Status</h2>
  <div class="hider updatable">
    <table class="two-col-layout">
      <tr>
        <td>
          <h3>All active traces</h3>
          <% if (traces.length > 0) { %>
          <table class="list">
            <thead>
              <tr>
                <th>Name</th>
                <th>Pattern</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <%
                 for (var i = 0; i < traces.length; i++) {
                     var trace = traces[i];
              %>
              <tr<%= alt_rows(i)%>>
                <td><%= trace.name %></td>
                <td><%= trace.pattern %></td>
                <td>
                  <form action="#/traces" method="delete">
                    <input type="hidden" name="vhost" value="<%= trace.vhost %>"/>
                    <input type="hidden" name="name" value="<%= trace.name %>"/>
                    <input type="submit" value="Stop"/>
                  </form>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
          <% } else { %>
          <p>... no traces ...</p>
          <% } %>
        </td>
        <td>
          <h3>Virtual hosts and tracing</h3>
          <table class="list">
            <thead>
              <tr>
                <th><%= fmt_sort('Name', 'name') %></th>
                <th>Tracing</th>
              </tr>
            </thead>
            <tbody>
              <%
                 for (var i = 0; i < vhosts.length; i++) {
                     var vhost = vhosts[i];
              %>
              <tr<%= alt_rows(i)%>>
                <td><%= vhost.name %></td>
                <td class="c"><%= fmt_boolean(vhost.tracing) %></td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </td>
      </tr>
    </table>
  </div>
</div>

<div class="section">
  <h2>Trace files</h2>
  <div class="hider updatable">
    <% if (files.length > 0) { %>
      <table class="list">
        <thead>
          <tr>
            <th>Name</th>
            <th>Size</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <%
            for (var i = 0; i < files.length; i++) {
                var file = files[i];
        %>
          <tr<%= alt_rows(i)%>>
            <td><%= link_to(file.name, "api/trace-files/" + file.name) %></td>
            <td class="r"><%= fmt_bytes(file.size) %></td>
            <td>
              <form action="#/trace-files" method="delete" class="inline-form">
                <input type="hidden" name="name" value="<%= file.name %>"/>
                <input type="submit" value="Delete" />
              </form>
            </td>
          </tr>
        <% } %>
        </tbody>
      </table>
    <% } else { %>
      <p>... no files ...</p>
    <% } %>
  </div>
</div>

<div class="section-hidden">
  <h2>Add a new trace</h2>
  <div class="hider">
    <form action="#/traces" method="put">
      <table class="form">
<% if (vhosts_interesting) { %>
        <tr>
          <th><label>Virtual host:</label></th>
          <td>
            <select name="vhost">
              <% for (var i = 0; i < vhosts.length; i++) { %>
              <option value="<%= vhosts[i].name %>"><%= vhosts[i].name %></option>
              <% } %>
            </select>
          </td>
        </tr>
<% } else { %>
        <tr><td><input type="hidden" name="vhost" value="<%= vhosts[0].name %>"/></td></tr>
<% } %>
        <tr>
          <th><label>Name:</label></th>
          <td><input type="text" name="name"/><span class="mand">*</span></td>
        </tr>
        <tr>
          <th><label>Pattern:</label></th>
          <td>
            <input type="text" name="pattern" value="#"/>
            <sub>Examples: #, publish.*, deliver.* *.amq.direct, *.myqueue</sub>
          </td>
        </tr>
      </table>
      <input type="submit" value="Add trace"/>
    </form>
  </div>
</div>
