<h1>Traces</h1>
<div class="updatable">
<% if (traces.length > 0) { %>
<table class="list">
 <thead>
  <tr>
    <th>Name</th>
  </tr>
 </thead>
 <tbody>
<%
 for (var i = 0; i < traces.length; i++) {
    var trace = traces[i];
%>
  <tr<%= alt_rows(i)%>>
    <td><%= link_to(trace.name, '#/traces/' + esc(trace.vhost) + '/' + esc(trace.name)) %></td>
  </tr>
<% } %>
 </tbody>
</table>
<% } else { %>
  <p>... no traces ...</p>
<% } %>
</div>

<div class="section-hidden">
  <h2>Add a new trace</h2>
  <div class="hider">
    <form action="#/traces" method="put">
      <table class="form">
<% if (vhosts_interesting) { %>
        <tr>
          <th><label>Virtual host:</label></th>
          <td>
            <select name="vhost">
              <% for (var i = 0; i < vhosts.length; i++) { %>
              <option value="<%= vhosts[i].name %>"><%= vhosts[i].name %></option>
              <% } %>
            </select>
          </td>
        </tr>
<% } else { %>
        <tr><td><input type="hidden" name="vhost" value="<%= vhosts[0].name %>"/></td></tr>
<% } %>
        <tr>
          <th><label>Name:</label></th>
          <td><input type="text" name="name"/><span class="mand">*</span></td>
        </tr>
      </table>
      <input type="submit" value="Add trace"/>
    </form>
  </div>
</div>
