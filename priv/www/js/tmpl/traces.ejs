<h1>Traces</h1>
<div class="section">
  <h2>All traces</h2>
  <div class="hider updatable">
    <% if (traces.length > 0) { %>
    <table class="list">
      <thead>
        <tr>
          <th>Name</th>
          <th>Pattern</th>
        </tr>
      </thead>
      <tbody>
        <%
           for (var i = 0; i < traces.length; i++) {
             var trace = traces[i];
        %>
          <tr<%= alt_rows(i)%>>
            <td><%= link_to(trace.name, '#/traces/' + esc(trace.vhost) + '/' + esc(trace.name)) %></td>
            <td><%= trace.pattern %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <% } else { %>
    <p>... no traces ...</p>
    <% } %>
  </div>
</div>

<div class="section-hidden">
  <h2>Virtual hosts and tracing</h2>
  <div class="hider updatable">
    <table class="list">
      <thead>
        <tr>
          <th><%= fmt_sort('Name', 'name') %></th>
          <th>Tracing</th>
        </tr>
      </thead>
      <tbody>
        <%
           for (var i = 0; i < vhosts.length; i++) {
             var vhost = vhosts[i];
        %>
          <tr<%= alt_rows(i)%>>
            <td><%= link_vhost(vhost.name) %></td>
            <td class="c"><%= fmt_boolean(vhost.tracing) %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<div class="section-hidden">
  <h2>Add a new trace</h2>
  <div class="hider">
    <form action="#/traces" method="put">
      <table class="form">
<% if (vhosts_interesting) { %>
        <tr>
          <th><label>Virtual host:</label></th>
          <td>
            <select name="vhost">
              <% for (var i = 0; i < vhosts.length; i++) { %>
              <option value="<%= vhosts[i].name %>"><%= vhosts[i].name %></option>
              <% } %>
            </select>
          </td>
        </tr>
<% } else { %>
        <tr><td><input type="hidden" name="vhost" value="<%= vhosts[0].name %>"/></td></tr>
<% } %>
        <tr>
          <th><label>Name:</label></th>
          <td><input type="text" name="name"/><span class="mand">*</span></td>
        </tr>
        <tr>
          <th><label>Pattern:</label></th>
          <td><input type="text" name="pattern"/></td>
        </tr>
      </table>
      <input type="submit" value="Add trace"/>
    </form>
  </div>
</div>
